generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(uuid())
  first_name String
  last_name  String
  email      String       @unique
  password   String
  role       UserRoleType @default(VISITEUR)
  active     Boolean      @default(false)
}

enum UserRoleType {
  SUPER_ADMIN
  ADMIN
  PROFFESSEUR
  PARTENT
  ELEVE
  DIRECTEUR
  VISITEUR
}
